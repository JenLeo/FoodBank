@model ID.Models.OrderDetail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderDetailId" />
            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="PackageId" />
            <input type="hidden" asp-for="Quantity" />
            <input type="hidden" asp-for="UnitPrice" />

            <div class="form-group">
                <label asp-for="OrderStatus" class="control-label"></label>
                @Html.DropDownListFor(m => m.OrderStatus,
          new SelectList(Enum.GetValues(typeof(OrderStatusOptions))),
          "Order Status")
                <span asp-validation-for="OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
